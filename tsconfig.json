{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src",
    "packages/*/config.d.ts",
    "plugins/*/src",
    "plugins/*/config.d.ts",
    "plugins/*/dev",
    "plugins/*/migrations"
  ],
  "exclude": ["node_modules", "dist-types"],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
